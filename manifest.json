{
  "manifest_version": 3,
  "name": "ClearView",
  "description": "Extension for news analysis",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/Logo.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["selectors.json"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["newsAnalysisConstructor.js" ,"content.js"]
      
    }
  ]
}
